{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",                // 支援現代 Node.js 特性
    "module": "CommonJS",              // 使用 CommonJS 模塊（Node.js 默認）
    "baseUrl": ".",                    // 設置相對路徑基準
    "outDir": "dist", // 編譯輸出目錄
    "rootDir": "src" // 原始檔案目錄
  },
  "include": ["**/*.ts"], // 包含的檔案
  "exclude": ["node_modules"] // 排除的檔案
}
