{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",                // 支援現代 Node.js 特性
    "module": "CommonJS",              // 使用 CommonJS 模塊（Node.js 默認）
    "rootDir": "src",                   // 原始碼的根目錄
    "outDir": "dist",                // 編譯後文件的輸出目錄
    "baseUrl": ".",                    // 設置相對路徑基準
    "paths": {
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["**/*"],                 // 包含所有文件
  "exclude": ["node_modules", "dist"] // 排除編譯目錄和依賴
}
