{
  "name": "my-chat-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "23.6.0",
    "npm": "10.9.2"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "next dev",
    "dev:server": "nodemon --watch server --exec ts-node server/src/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "next build",
    "build:server": "tsc --project server/tsconfig.json",
    "start:server": "node server/dist/index.js",
    "start:client": "next start",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.741.0",
    "@prisma/client": "^6.2.1",
    "@supabase/supabase-js": "^2.48.1",
    "agora-rtc-react": "^2.3.0",
    "agora-rtc-sdk-ng": "^4.23.1",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.7.9",
    "concurrently": "^9.1.2",
    "crypto-js": "^4.2.0",
    "express": "^4.21.2",
    "framer-motion": "^12.3.1",
    "multer": "^1.4.5-lts.1",
    "next": "^15.1.6",
    "next-auth": "^4.24.11",
    "next-connect": "^1.0.0",
    "prisma": "^6.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.5",
    "react-full-screen": "^1.1.1",
    "react-icons": "^5.4.0",
    "react-markdown": "^9.0.3",
    "react-spinners": "^0.15.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-toastify": "^11.0.3",
    "react-tsparticles": "^2.12.2",
    "remark-gfm": "^4.0.0",
    "sass": "^1.83.4",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "tsparticles": "^2.12.0",
    "wscat": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/crypto-js": "^4.2.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "nodemon": "^3.1.9",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.3"
  }
}
